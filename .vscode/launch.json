  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Server",
      "type": "python",
      "request": "launch",
      "module": "app.server",
      "justMyCode": false
    },
    {
      "name": "Python: Background Daemon",
      "type": "python",
      "request": "launch",
      "module": "app.foxlink.daemon",
      "args": [
        "-i",
        "1"
      ],
      "justMyCode": false
    },
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload"
      ],
      "jinja": true
    }
  ]
}